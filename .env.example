# PostgreSQL
PG_HOST=postgres-host
PG_DB=public
PG_USER=postgres
PG_PASSWORD=pgpass

# Sybase
SYBASE_HOST=sybase-host
SYBASE_DB=sybasedb
SYBASE_USER=sa
SYBASE_PASSWORD=sybasepass

# Web
JWT_SECRET=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRES=3600

# Proxy
PROXY_PORT=5000
MAX_CONNECTIONS=100

# Security
JWT_IP_VALIDATION=true
JWT_EXPIRATION_MINUTES=60

# Conversion
CONVERSION_WARNINGS=raiserror,cursor,xml
MAX_TEMP_TABLE_SIZE=100MB

# Monitoring
METRICS_PORT=9100
